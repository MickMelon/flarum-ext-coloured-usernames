{
    "name": "mickmelon/flarum-ext-coloured-usernames",
    "description": "Set the username colour to the same as the rank colour (only on posts)",
    "keywords": [
        "extension",
        "flarum",
        "design",
        "groups"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2"
    },
    "authors": [
        {
            "name": "MickMelon",
            "homepage": "https://github.com/mickmelon/"
        }
    ],
    "support": {
        "issues": "https://github.com/mickmelon/flarum-ext-coloured-usernames/issues",
        "source": "https://github.com/mickmelon/flarum-ext-coloured-usernames",
        "forum": "https://discuss.flarum.org/d/22411"
    },
    "extra": {
        "flarum-extension": {
            "title": "Coloured Usernames",
            "icon": {
                "name": "fas fa-user",
                "backgroundColor": "#1d70b8",
                "color": "#fff"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": false,
                "forum": true,
                "js": true,
                "jsCommon": false,
                "css": true,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "typescript": false,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": true
            }
        }
    }
}
